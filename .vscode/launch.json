    "version": "0.2.0",
    "configurations": [
        {
            "name": "RSpec - all",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "/Users/johndo/.rvm/gems/ruby-2.6.3/bin/rspec",
            "args": [
                "--require", "spec_helper",
                "--require", "rails_helper",
                "--format", "documentation"
                ]
        },
        {
            "name": "RSpec - open spec file",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "/Users/johndo/.rvm/gems/ruby-2.6.3/bin/rspec",
            "args": ["${file}"]
        },
        {
            "name": "rspec run focused line",
            "type": "Ruby",
            "program": "/Users/johndo/.rvm/gems/ruby-2.6.3/bin/rspec",
            "args": ["${relativeFile}:${lineNumber}"],
            "request": "launch",
            "cwd": "${workspaceRoot}",
          },
        
    ]
}
